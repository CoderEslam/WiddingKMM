<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageSlider">
        <attr name="iss_auto_cycle" format="boolean" />
        <attr name="iss_corner_radius" format="integer" />
        <attr name="iss_period" format="integer" />
        <attr name="iss_delay" format="integer" />
        <attr name="iss_placeholder" format="reference" />
        <attr name="iss_error_image" format="reference" />
        <attr name="iss_selected_dot" format="reference" />
        <attr name="iss_unselected_dot" format="reference" />
        <attr name="iss_title_background" format="reference" />
        <attr name="iss_text_align" format="string" />
        <attr name="iss_indicator_align" format="string" />
    </declare-styleable>
    <declare-styleable name="SliderView">

        <attr name="sliderIndicatorOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="sliderIndicatorEnabled" format="boolean" />
        <attr name="sliderIndicatorRadius" format="dimension" />
        <attr name="sliderIndicatorPadding" format="dimension" />
        <attr name="sliderIndicatorMargin" format="dimension" />
        <attr name="sliderIndicatorMarginLeft" format="dimension" />
        <attr name="sliderIndicatorMarginRight" format="dimension" />
        <attr name="sliderIndicatorMarginTop" format="dimension" />
        <attr name="sliderIndicatorMarginBottom" format="dimension" />

        <attr name="sliderIndicatorGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>

        <attr name="sliderIndicatorUnselectedColor" format="color" />
        <attr name="sliderIndicatorSelectedColor" format="color" />
        <attr name="sliderIndicatorAnimationDuration" format="integer" />
        <attr name="sliderAnimationDuration" format="integer" />

        <attr name="sliderIndicatorRtlMode">
            <enum name="on" value="0" />
            <enum name="off" value="1" />
            <enum name="auto" value="2" />
        </attr>

        <attr name="sliderScrollTimeInSec" format="integer" />
        <attr name="sliderAutoCycleEnabled" format="boolean" />
        <attr name="sliderStartAutoCycle" format="boolean" />

        <attr name="sliderAutoCycleDirection">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
            <enum name="back_and_forth" value="2" />
        </attr>

    </declare-styleable>

    <declare-styleable name="SocialView">
        <!-- Determine whether each feature should be turned on/off.
             Default is `hashtag|mention|hyperlink`. -->
        <attr name="socialFlags">
            <flag name="hashtag" value="1" />
            <flag name="mention" value="2" />
            <flag name="hyperlink" value="4" />
        </attr>

        <!-- Color of each feature.
             If particular feature is not enabled, this value will be ignored.
             Default is color accent of current theme. -->
        <attr name="HashtagColor" format="color" />
        <attr name="MentionColor" format="color" />
        <attr name="HyperlinkColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SocialViewStyle">
        <attr name="socialViewStyle" format="reference" />
    </declare-styleable>

    <style name="Widget.SocialView" parent="android:Widget.TextView">
        <item name="HashtagColor">@color/foshiadark</item>
        <item name="MentionColor">@color/foshiadark</item>
        <item name="HyperlinkColor">@color/foshiadark</item>
    </style>

    <attr name="linkModes">
        <flag name="hashtag" value="1" />
        <flag name="mention" value="2" />
        <flag name="phone" value="4" />
        <flag name="email" value="8" />
        <flag name="url" value="16" />
    </attr>

    <declare-styleable name="SocialTextView">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="underlineEnabled" format="boolean" />
        <attr name="hashtagColor" format="color" />
        <attr name="mentionColor" format="color" />
        <attr name="phoneColor" format="color" />
        <attr name="emailColor" format="color" />
        <attr name="urlColor" format="color" />
        <attr name="selectedColor" format="color" />
        <attr name="linkModes" />
    </declare-styleable>


    <declare-styleable name="VideoView">
        <attr name="useDefaultControls" format="boolean" />
        <attr name="useTextureViewBacking" format="boolean" />
        <attr name="measureBasedOnAspectRatio" format="boolean" />
        <attr name="playerConfigProvider" format="string" />
        <attr name="videoScale" format="enum">
            <enum name="center" value="0" />
            <enum name="centerCrop" value="1" />
            <enum name="centerInside" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitXY" value="4" />
            <enum name="none" value="5" />
        </attr>
    </declare-styleable>

</resources>